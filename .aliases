alias mkvenv='_mkvenv'
function _mkvenv() { [ -n "$1" ] && python3 -m venv "$1" || python3 -m venv venv; }

alias rmvenv='_rmvenv'
function _rmvenv() {
	[[ $(type deactivate 2>/dev/null) ]] && deactivate
	[[ -n "$1" ]] && rm -rf "$1" || rm -rf venv
}

alias srcvenv='_srcvenv'
function _srcvenv() { [ -n "$1" ] && . "$1"/bin/activate || . venv/bin/activate; }

alias setvenv='_setvenv'
function _setvenv() {
	if [ -n "$1" ]; then
		_mkvenv "$1" && _srcvenv "$1"
	else
		_mkvenv && _srcvenv
	fi
}

alias dvenv='_dvenv'
function _dvenv() {
  [[ $(type deactivate 2>/dev/null) ]] && deactivate
}
