alias dk='_run_docker'
function _run_docker() {
  first=""
  second=""
  third=""
  fourth=""
  final_comm=""
  final_comm="docker "
  [[ -n "$1" ]] || return
  first="$1"
  case "$1" in
	cn)
	  first="container"
	  ;;
	b)
	  first="build"
      ;;
	*)
	  first="$1"
	  ;;
   esac
   if [ -n "$2" ]; then
	case "$2" in
	  st)
		second="start"
		;;
	  sp)
		second="stop"
		;;
	  rn)
		second="run"
		;;
	  wt)
		second="wait"
		;;
	  *)
		second="$2"
		;;
	  esac
	  if [ -n "$3" ]; then
	    third="$3"
		[[ -n "$4" ]] && fourth="$4"
	  fi
	fi
  [[ -n "$first" ]] && final_comm+="$first "
  [[ -n "$second" ]] && final_comm+="$second "
  [[ -n "$third" ]] && final_comm+="$third "
  [[ -n "$fourth" ]] && final_comm+="$fourth " 
  eval "$final_comm"
}

alias cra='_make_react_app'
function _make_react_app() {
  [[ -n "$1" ]] && mkcd "$1" || return
  npx create-react-app .
  mv ./src/index.js ./src/App.js ./public/index.html ./
  rm -rf ./src ./public .git .gitignore
  mkdir {src,public}
  sed -i '3d;5d;13,17d' ./index.js
  sed -i '1,3d;7,20d;' ./App.js
  sed -i s/' className=\"App\"'//g ./App.js
  sed -i '5,26d;30d;32,41d;' ./index.html
  mv ./index.js ./App.js ./src
  mv ./index.html ./public
}

